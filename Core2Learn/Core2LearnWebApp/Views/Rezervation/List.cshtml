@model IEnumerable<Payment>

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>
                Rezervation No
            </th>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Arrivaldate
            </th>
            <th>
                DepartureDate
            </th>
            <th>
                RoomNo
            </th>
            <th>
                Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Guest.Rezervation.Id
                </td>
                <td>
                    @item.Guest.Name
                </td>
                <td>
                    @item.Guest.SurName
                </td>

                <td>
                    @item.Guest.Rezervation.Arrivaldate.Value.ToShortDateString()
                </td>
                <td>
                    @item.Guest.Rezervation.DepartureDate.Value.ToShortDateString()
                </td>
                <td>
                    @item.Guest.Rezervation.RoomNo
                </td>
                <td>
                    @item.TotalPrice.ToString("C")
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
