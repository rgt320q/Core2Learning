@model List<Rezervation>

@{
    ViewData["Title"] = "Create";
}




<form method="post" asp-action="Create">
    <p>
        @foreach (var item in Model)
        {
        <div class="row table-bordered">

            @foreach (var guest in item.Guests)
            {
                <label asp-for="@guest.Name">Name</label>
                <input asp-for="@guest.Name" />

                <label asp-for="@guest.SurName">SurName</label>
                <input asp-for="@guest.SurName" />
            }
            <label asp-for="@item.RoomNo">Room No</label>
            <input asp-for="@item.RoomNo" />

            <label asp-for="@item.Arrivaldate">Arrivaldate</label>
            <input asp-for="@item.Arrivaldate" />

            <label asp-for="@item.DepartureDate">DepartureDate</label>
            <input asp-for="@item.DepartureDate" />


            @foreach (var payment in item.Payments)
            {
                <label asp-for="@payment.TotalPrice">Total Price</label>
                <input asp-for="@payment.TotalPrice" />

            }
        </div>
        }
    </p>
    <button type="submit">Submit</button>
</form>



