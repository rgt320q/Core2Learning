@model Tuple<Rezervation,Guest,Payment>

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <input type="hidden" name="Rezervation.Id" />
    <p>
        <div>
            <label asp-for="@Model.Item2.Name">Name : </label>
            <input asp-for="@Model.Item2.Name" />
        </div>
        <div>
            <label asp-for="@Model.Item2.SurName">Surname : </label>
            <input asp-for="@Model.Item2.SurName" />
        </div>

        <div>
